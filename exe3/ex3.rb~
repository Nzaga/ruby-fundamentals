#This line print out the statement provided
puts "I will now count my chickens:"

#Calculates the number of hens provided between curl {}
puts "Hens #{25 + 30 /6 }"

#Provides roosters from the expression provided between {]
puts "Roosters #{100 - 25 * 3 % 4}"

#prints out the statement provided
puts "Now I will count the eggs:"

#Performs the calculation as the expression provided
puts 3 + 2 + 1 - 5 + 4 % 2 - 1 / 4 + 6

#Provides the boolen value of the expression provided
puts "Is it true that 3 + 2 < 5 - 7?"

#prints the boolean value of the expression
puts 3 + 2 < 5 - 7

#prints the statement and the answer of the expression between {}
puts "What is 3 + 2? #{3 + 2}"
puts "What is 5 - 7? #{5 - 7}"

#prints out the string provided
puts "On, what`s why it`s false."

#prints out the string provided
puts "How about some more."

#prints out the string and the boolean value of the expression between {}
puts "Is it greater? #{5 > -2}"
puts "Is it greater or equal? #{ 5 >= -2}"
puts "Is it less or equal? #{ 5 <= -2}"
